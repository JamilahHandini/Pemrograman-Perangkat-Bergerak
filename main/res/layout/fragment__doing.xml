<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment_Doing">

    <LinearLayout
        android:id="@+id/lyt_doing"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|center"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@color/doing"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardCornerRadius="20dp"
                app:contentPadding="10dp"
                app:cardBackgroundColor="@color/course">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/circle1"
                    android:layout_gravity="right|top"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/circle2"
                    android:layout_gravity="right|top"
                    android:layout_marginRight="35dp"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/circle3"
                    android:layout_gravity="right|top"
                    android:layout_marginRight="70dp"/>

                <TextView
                    android:id="@+id/title_task_doing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title Task"
                    android:textColor="@color/white"
                    android:fontFamily="@font/comic_neue_light"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description Task"
                android:textColor="@color/white"
                android:fontFamily="@font/comic_neue_light"
                android:textSize="24dp"
                android:layout_marginTop="110dp"
                android:layout_marginLeft="10dp"/>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10%"
                android:textColor="@color/white"
                android:fontFamily="@font/comic_neue_light"
                android:textSize="24dp"
                android:layout_gravity="center"
                android:layout_marginTop="-20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course:"
                android:textColor="@color/white"
                android:fontFamily="@font/comic_neue_light"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="bottom"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mobile"
                android:textColor="@color/white"
                android:fontFamily="@font/comic_neue_light"
                android:textSize="20dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deadline:"
                android:textColor="@color/white"
                android:fontFamily="@font/comic_neue_light"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="50dp"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 Maret 2022"
                android:textColor="@color/white"
                android:fontFamily="@font/comic_neue_light"
                android:textSize="20dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp"
                />

        </androidx.cardview.widget.CardView>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>